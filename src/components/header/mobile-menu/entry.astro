---
export interface Props {
  link: string;
  title: string;
}
const { link, title } = Astro.props;
---

<a
  class="cursor-pointer flex items-center p-6 lg:py-2 lg:px-4 border-y-4 lg:border-b-0 border-transparent hover:border-primary duration-200 text-xl font-extralight"
  href={link}>{title}</a
>
