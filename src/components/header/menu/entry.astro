---
import Title from "./title.astro";
export interface Props {
  link: string;
  title: string;
}
const { link, title } = Astro.props;
---

<a
  class="cursor-pointer flex-column items-center group no-underline"
  href={link}
>
  <div
    class="duration-500 transition-all tracking-tighter sm:tracking-normal p-1 relative"
  >
    <div
      class="duration-500 group-hover:drop-shadow-glowM group-hover:text-white lowercase"
    >
      <Title>{title}</Title>
    </div>
  </div>

  <div
    class="hidden sm:block duration-500 px-4 group-hover:px-0 opacity-0 group-hover:opacity-100"
  >
    <div
      class="transition-all duration-200 pt-2 xs:border-b-2 border-t-0 border-transparent group-hover:border-white group-hover:border-opacity-70 bg-gradient-to-t group-hover:from-zinc-700 group-hover:text-black"
    >
    </div>
  </div>
</a>
<span
  class="border-r-[1px] border-opacity-50 border-white sm:hidden last:hidden"
></span>
